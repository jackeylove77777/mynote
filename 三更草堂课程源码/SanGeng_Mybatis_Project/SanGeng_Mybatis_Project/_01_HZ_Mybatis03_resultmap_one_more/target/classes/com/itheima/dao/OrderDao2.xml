<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.OrderDao2">

<!--    id  ordertime    total     uid
         2  2018-12-12    4000       1-->
    <resultMap id="orderMap" type="com.itheima.domain.Order" autoMapping="true">
        <!--select属性声明了使用哪一个dao的哪个方法查user对象-->
        <!--column属性声明了把本次查询的哪列的值拿去作为参数进行查询-->
        <association property="user" javaType="com.itheima.domain.User"
                     select="com.itheima.dao.UserDao2.selectById"
                     column="uid" >
        </association>
    </resultMap>

    <select id="selectById"  resultMap="orderMap">
        select * from orders where id = #{id}
    </select>

    <select id="selectByUid" resultType="com.itheima.domain.Order">
        select * from orders where uid = #{uid}
    </select>


</mapper>
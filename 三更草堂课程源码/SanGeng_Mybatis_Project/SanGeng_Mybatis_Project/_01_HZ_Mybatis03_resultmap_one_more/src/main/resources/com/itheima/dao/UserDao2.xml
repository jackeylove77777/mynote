<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.itheima.dao.UserDao2">
<!--    id  username  password  birthday
        2  haohao    123       2019-12-12-->
    <resultMap id="userMap" type="com.itheima.domain.User" autoMapping="true">
        <collection property="orderList"
                    ofType="com.itheima.domain.Order"
                    select="com.itheima.dao.OrderDao2.selectByUid"
                    column="id">
        </collection>
    </resultMap>

    <select id="selectById" resultMap="userMap">
        select * from user where id = #{id}
    </select>
</mapper>